Subject: [PATCH] ilogb instead of (size_t)logb Also better for cygwin

---
 src/kernel/zpz/givtablelimits.h | 2 +-
 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/src/kernel/zpz/givtablelimits.h b/src/kernel/zpz/givtablelimits.h
index 8f7dec1c..55878f9b 100755
--- a/src/kernel/zpz/givtablelimits.h
+++ b/src/kernel/zpz/givtablelimits.h
@@ -71,7 +71,7 @@ class AdicSize {
         tmp *= double(P-1);
         tmp *= double(e);
         tmp *= double(nm);
-        size_t k = size_t(logb(tmp));
+        size_t k = ilogb(tmp);
         return ( (53/(2*e-1))>k ? ++k : 0);        
     }
         
