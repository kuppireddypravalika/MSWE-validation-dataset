---
 gdal/frmts/gtiff/geotiff.cpp | 2 +-
 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/gdal/frmts/gtiff/geotiff.cpp b/gdal/frmts/gtiff/geotiff.cpp
index ca60ff1026d2..1bd01202e07f 100644
--- a/gdal/frmts/gtiff/geotiff.cpp
+++ b/gdal/frmts/gtiff/geotiff.cpp
@@ -1740,7 +1740,7 @@ CPLErr GTiffOddBitsBand::IReadBlock( int nBlockXOff, int nBlockYOff,
                     | ((GUInt32)*(pabyImage + 1) << 8)
                     | (GUInt32)*(pabyImage + 2);
