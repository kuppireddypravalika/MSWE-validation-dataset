From 9a03ec5a881a0d5b7db886d7a9f735bde02bfb6d Mon Sep 17 00:00:00 2001
From: Akira Takahashi <faithandbrave@gmail.com>
Date: Fri, 11 Oct 2013 16:31:47 +0900
Subject: [PATCH] euler_path : use `out_degree` instead of `degree`.

---
 shand/graph/euler_path.hpp | 4 ++--
 1 file changed, 2 insertions(+), 2 deletions(-)

diff --git a/shand/graph/euler_path.hpp b/shand/graph/euler_path.hpp
index 2b42820..27d519b 100644
--- a/shand/graph/euler_path.hpp
+++ b/shand/graph/euler_path.hpp
@@ -27,12 +27,12 @@ inline boost::optional<std::size_t>
     std::size_t odd = 0;
     std::size_t m = 0;
     BOOST_FOREACH (const vertex_desc& v, vertices(g)) {
-        const degree_size_type size = degree(v, g);
+        const degree_size_type size = out_degree(v, g);
         if (size % 2 == 1) ++odd;
         m += size;
     }
     m /= 2;
-    if (!(odd == 0 || (odd == 2 && degree(s, g) % 2 == 1)))
+    if (!(odd == 0 || (odd == 2 && out_degree(s, g) % 2 == 1)))
         return boost::none;
     return m;
 }
