 OPHD/Population/Population.cpp | 8 ++------
 1 file changed, 2 insertions(+), 6 deletions(-)

diff --git a/OPHD/Population/Population.cpp b/OPHD/Population/Population.cpp
index aee1e3bcc..9c21c12f7 100644
--- a/OPHD/Population/Population.cpp
+++ b/OPHD/Population/Population.cpp
@@ -3,6 +3,7 @@
 #include "../RandomNumberGenerator.h"
 #include <algorithm>
 #include <iostream>
+#include <numeric>
 
 
 namespace {
@@ -67,12 +68,7 @@ void Population::addPopulation(PersonRole role, int count)
  */
 int Population::size() const
 {
-	int count = 0;
-	for (auto& populationRole : mPopulation)
-	{
-		count += populationRole;
-	}
-	return count;
+	return std::accumulate(mPopulation.begin(), mPopulation.end(), 0);
 }
 
 
