   for (list<Cut*>::iterator it = cuts.begin(); it != cuts.end(); it++) {
     Cut *cut = *it;
-    if (job->lconf->vector_optimize > 0) {
       cut->xml("/tmp/xml/input/ctrl-cut.xml");
       explode.filter(cut);
       cut->xml("/tmp/xml/explode/ctrl-cut.xml");
       join.filter(cut);
       cut->xml("/tmp/xml/join/ctrl-cut.xml");
 
