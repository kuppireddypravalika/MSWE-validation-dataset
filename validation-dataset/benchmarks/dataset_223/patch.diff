 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/openvpn/server/servproto.hpp b/openvpn/server/servproto.hpp
index de27ac0f5..60f063dfd 100644
--- a/openvpn/server/servproto.hpp
+++ b/openvpn/server/servproto.hpp
@@ -346,7 +346,7 @@ namespace openvpn {
 	if (halt)
 	  return;
 
-	BufferPtr buf(new BufferAllocated(64, BufferAllocated::GROW));
