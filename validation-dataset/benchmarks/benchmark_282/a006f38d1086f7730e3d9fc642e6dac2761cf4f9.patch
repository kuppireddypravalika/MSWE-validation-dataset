---
 src/opencl/build_kernels.cpp | 3 +++
 1 file changed, 3 insertions(+)

diff --git a/src/opencl/build_kernels.cpp b/src/opencl/build_kernels.cpp
index 48b1da724..e306612f1 100644
--- a/src/opencl/build_kernels.cpp
+++ b/src/opencl/build_kernels.cpp
@@ -30,6 +30,9 @@ namespace vopencl
       void build_kernels(void) noexcept
       {
          std::string default_opts("-Isrc/opencl/cl "
+                                  "-cl-mad-enable "
+                                  "-cl-fast-relaxed-math "
+                                  "-cl-no-signed-zeros "
 #ifdef OPENCL_DP
                                   "-DOPENCL_DP "
 #endif
