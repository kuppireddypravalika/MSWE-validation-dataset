Subject: [PATCH] Use logical block size = 512 bytes by default

---
 src/qemu_driver.c | 2 +-
 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/src/qemu_driver.c b/src/qemu_driver.c
index 8b3bab2a..995de6c5 100644
--- a/src/qemu_driver.c
+++ b/src/qemu_driver.c
@@ -308,7 +308,7 @@ static void vitastor_close(BlockDriverState *bs)
 static int vitastor_probe_blocksizes(BlockDriverState *bs, BlockSizes *bsz)
 {
     bsz->phys = 4096;
-    bsz->log = 4096;
+    bsz->log = 512;
     return 0;
 }
 #endif
