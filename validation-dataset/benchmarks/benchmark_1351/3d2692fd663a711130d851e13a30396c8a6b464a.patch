Subject: [PATCH] reduced TaskSchedulerTBB stack to 4MB again, main thread
 anyway has no larger stack

---
 common/tasking/taskscheduler_tbb.cpp | 2 +-
 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/common/tasking/taskscheduler_tbb.cpp b/common/tasking/taskscheduler_tbb.cpp
index 0ae8e450c..36debd8d3 100644
--- a/common/tasking/taskscheduler_tbb.cpp
+++ b/common/tasking/taskscheduler_tbb.cpp
@@ -143,7 +143,7 @@ namespace embree
     {
       running = true;
       for (size_t t=1; t<numThreads; t++) {
-        threads.push_back(createThread((thread_func)threadPoolFunction,this,16*1024*1024,t));
+        threads.push_back(createThread((thread_func)threadPoolFunction,this,4*1024*1024,t));
       }
     }
   }
