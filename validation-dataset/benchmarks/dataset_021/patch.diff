 aegisub/src/ass_dialogue.cpp | 2 +-
 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/aegisub/src/ass_dialogue.cpp b/aegisub/src/ass_dialogue.cpp
index 74c807ba2..e51f9c064 100644
--- a/aegisub/src/ass_dialogue.cpp
+++ b/aegisub/src/ass_dialogue.cpp
@@ -60,7 +60,7 @@ AssDialogue::AssDialogue()
 }
 
 AssDialogue::AssDialogue(AssDialogue const& that)
-: AssEntry(wxString(), "[Events]")
+: AssEntry(wxString(), that.group)
 , Comment(that.Comment)
 , Layer(that.Layer)
 , Start(that.Start)
