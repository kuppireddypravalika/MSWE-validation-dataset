FROM ubuntu:22.04

ENV DEBIAN_FRONTEND=noninteractive

# Install required build tools and Python packages
RUN apt-get update -o Acquire::Retries=3 && \
    apt-get upgrade -y && \
    apt-get install -y --no-install-recommends \
        build-essential \
        g++ \
        python3 \
        python3-pip \
        libeigen3-dev \
        libboost-all-dev \
        git \
        jq \
        curl \
        ca-certificates && \
    pip3 install numpy && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /workspace
COPY . /workspace

# Symlink Python
RUN ln -sf /usr/bin/python3 /usr/bin/python && python --version

# Make benchmark scripts executable
RUN chmod +x evaluation_scripts/*.py

# Default to interactive shell (you can override in `docker run`)
CMD ["bash"]
